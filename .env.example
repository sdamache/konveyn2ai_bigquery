# KonveyN2AI Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# Required API Keys
# ⚠️  SECURITY WARNING: Never commit actual API keys to version control
# These values are used as build arguments and runtime environment variables
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=konveyn2ai
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Service Configuration
PORT=8001
HOST=0.0.0.0
SERVICE_NAME=amatya-role-prompter

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# For production, set specific origins or leave empty for secure defaults

# Performance Configuration
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0
REQUEST_TIMEOUT=30.0

# AI Model Configuration
VERTEX_AI_MODEL=gemini-2.0-flash-001
GEMINI_MODEL=gemini-2.0-flash-001
VERTEX_AI_TEMPERATURE=0.2
VERTEX_AI_MAX_TOKENS=300
VERTEX_AI_TOP_K=40
VERTEX_AI_TOP_P=0.8

# BigQuery Memory Adapter Configuration (M2 Integration)
# Required for BigQuery-based vector operations and memory persistence
# These settings configure the BigQuery backend for Janapada Memory

# BigQuery Dataset Configuration
# ================================
# Two separate datasets for different purposes:

# 1. Vector/Embedding Operations (janapada_memory, gap analysis, semantic search)
BIGQUERY_DATASET_ID=semantic_gap_detector
# Contains: source_embeddings, source_metadata, gap_metrics, semantic_candidates, semantic_probe_embeddings

# 2. M1 Ingestion Operations (source metadata, ingestion logs, error tracking)
BIGQUERY_INGESTION_DATASET_ID=source_ingestion
# Contains: source_metadata, source_metadata_errors, ingestion_log

# Legacy Variables (for backward compatibility - will be deprecated)
# =================================================================
BIGQUERY_DATASET_ID=semantic_gap_detector  # Use BIGQUERY_EMBEDDINGS_DATASET_ID instead
BQ_DATASET=source_ingestion                # Use BIGQUERY_INGESTION_DATASET_ID instead
GOOGLE_CLOUD_PROJECT=konveyn2ai                      # Use GOOGLE_CLOUD_PROJECT instead

BIGQUERY_TABLE_PREFIX=
# Optional: Add prefix to table names (e.g., "dev_" for development environment)
# If empty, tables will use default names like "source_embeddings"
# Example: BIGQUERY_TABLE_PREFIX=dev_ -> creates "dev_source_embeddings"

# BigQuery Location and Performance Settings
BIGQUERY_LOCATION=us-central1
# BigQuery region for data processing and storage - should match GOOGLE_CLOUD_LOCATION

# Optional: Advanced BigQuery Configuration
BIGQUERY_VECTOR_CACHE_TTL_HOURS=24
BIGQUERY_MAX_CONCURRENT_QUERIES=5
BIGQUERY_SIMILARITY_THRESHOLD=0.7

# Legacy Vector Index Configuration (being migrated from)
# Required for migration from Vertex AI
INDEX_ENDPOINT_ID=your_index_endpoint_id_here
INDEX_ID=your_index_id_here
VECTOR_DIMENSIONS=768
LEGACY_VECTOR_DIMENSIONS=3072
SIMILARITY_METRIC=cosine
APPROXIMATE_NEIGHBORS_COUNT=150

# Service URLs (for local development)
AMATYA_SERVICE_URL=http://localhost:8001
JANAPADA_SERVICE_URL=http://localhost:8002
SVAMI_SERVICE_URL=http://localhost:8003


